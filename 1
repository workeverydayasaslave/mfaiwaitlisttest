  <script>
    const $ = (id) => document.getElementById(id);

    const ICONS = {
      volOn: `
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M11 5 6.7 8.4H4.5A2 2 0 0 0 2.5 10.4v3.2a2 2 0 0 0 2 2h2.2L11 19V5Z" stroke="rgba(255,255,255,.86)" stroke-width="1.7" stroke-linejoin="round"/>
          <path d="M15.5 8.4c1.2 1.2 1.2 6 0 7.2" stroke="rgba(167,139,250,.92)" stroke-width="1.7" stroke-linecap="round"/>
          <path d="M18.3 6.2c2.1 2.1 2.1 9.5 0 11.6" stroke="rgba(167,139,250,.70)" stroke-width="1.7" stroke-linecap="round"/>
        </svg>
      `,
      volOff: `
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M11 5 6.7 8.4H4.5A2 2 0 0 0 2.5 10.4v3.2a2 2 0 0 0 2 2h2.2L11 19V5Z" stroke="rgba(255,255,255,.86)" stroke-width="1.7" stroke-linejoin="round"/>
          <path d="M16.2 9.2 21 14" stroke="rgba(167,139,250,.92)" stroke-width="1.7" stroke-linecap="round"/>
          <path d="M21 9.2 16.2 14" stroke="rgba(167,139,250,.92)" stroke-width="1.7" stroke-linecap="round"/>
        </svg>
      `,
      pause: `
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M8 6.5v11" stroke="rgba(255,255,255,.86)" stroke-width="2.2" stroke-linecap="round"/>
          <path d="M16 6.5v11" stroke="rgba(255,255,255,.86)" stroke-width="2.2" stroke-linecap="round"/>
        </svg>
      `,
      play: `
        <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M9 7.5v9l8-4.5-8-4.5Z" fill="rgba(255,255,255,.86)"/>
        </svg>
      `
    };

    function isReducedMotion() {
      return window.matchMedia && window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    }

    function applyConfig() {
      document.documentElement.style.setProperty("--accentA", CONFIG.theme.accentA);
      document.documentElement.style.setProperty("--accentB", CONFIG.theme.accentB);
      document.documentElement.style.setProperty("--bgTop", CONFIG.theme.bgTop);
      document.documentElement.style.setProperty("--bgBottom", CONFIG.theme.bgBottom);
      document.documentElement.style.setProperty("--scale", String(CONFIG.theme.uiScale || 1));

      $("brandName").textContent = CONFIG.brand.name;
      $("brandName2").textContent = CONFIG.brand.name;

      $("homeLink").textContent = "Home";
      $("homeLink").href = CONFIG.links.home;

      // Login visibility logic (only show if real)
      if (!CONFIG.links.showLogin) {
        $("loginLink").style.display = "none";
      } else {
        $("loginLink").textContent = "Log in";
        $("loginLink").href = CONFIG.links.login;
      }

      // Waitlist CTA copy (header)
      $("signupLink").textContent = "Join waitlist";
      $("signupLink").href = CONFIG.links.signup;

      $("bigNum").textContent = CONFIG.hero.bigNumber;

      $("heroBadge").textContent = CONFIG.hero.badge;
      $("heroLead").textContent = CONFIG.hero.headlineLead;
      $("heroProduct").textContent = CONFIG.hero.productName;
      $("heroSub").textContent = CONFIG.hero.subcopy;

      $("ctaLabel").textContent = CONFIG.hero.ctaLabel;
      $("email").placeholder = CONFIG.hero.emailPlaceholder;
      $("ctaBtnText").textContent = CONFIG.hero.buttonText;
      $("finePrint").textContent = CONFIG.hero.finePrint;

      $("scrollHint").textContent = CONFIG.hero.scrollHint;

      $("whyTitle").textContent = CONFIG.why.title;
      $("whyList").innerHTML = CONFIG.why.items.map(x =>
        `<li class="why-item">
          <span class="pill">${x.chip}</span>
          <div>
            <strong>${x.title}</strong>
            <span>${x.desc}</span>
          </div>
        </li>`
      ).join("");

      $("videosCaps").textContent = CONFIG.sections.videosTitle;
      $("videosTitle").textContent = CONFIG.sections.videosTitle;
      $("videosDesc").textContent = CONFIG.sections.videosDesc;

      // Capabilities
      $("capTitle").textContent = CONFIG.sections.capabilitiesTitle;
      $("capDesc").textContent = CONFIG.sections.capabilitiesDesc;
      $("capList").innerHTML = (CONFIG.sections.capabilities || []).map(x => `
        <div class="capItem">
          <span class="capDot" aria-hidden="true"></span>
          <div>
            <strong>${x.title}</strong>
            <span>${x.desc}</span>
          </div>
        </div>
      `).join("");

      initDemoGallery(CONFIG.media.demoVideos || []);
      initHeroVideo();
      initTestimonials();

      $("pricingTitle").textContent = CONFIG.sections.pricingTitle;
      $("pricingDesc").textContent = CONFIG.sections.pricingDesc;
      $("tIndividual").textContent = CONFIG.sections.pricingToggleA;
      $("tTeam").textContent = CONFIG.sections.pricingToggleB;

      $("cta2Title").textContent = CONFIG.sections.cta2Title;
      $("cta2Desc").textContent = CONFIG.sections.cta2Desc;
      $("email2").placeholder = CONFIG.hero.emailPlaceholder;
      $("ctaBtnText2").textContent = CONFIG.hero.buttonText;
      $("finePrint2").textContent = CONFIG.hero.finePrint;

      $("communityTitle").textContent = CONFIG.sections.communityTitle;
      $("communityDesc").textContent = CONFIG.sections.communityDesc;
      $("communityCtaTitle").textContent = CONFIG.sections.communityCtaTitle;
      $("communityCtaDesc").textContent = CONFIG.sections.communityCtaDesc;

      $("faqTitle").textContent = CONFIG.sections.faqTitle;
      $("faqDesc").textContent = CONFIG.sections.faqDesc;
      $("faqGrid").innerHTML = (CONFIG.sections.faqs || []).map(x => `
        <details>
          <summary>${x.q}<span class="accChev" aria-hidden="true"></span></summary>
          <p>${x.a}</p>
        </details>
      `).join("");

      $("privacy").href = CONFIG.footer.privacy;
      $("terms").href = CONFIG.footer.terms;
      $("contact").href = CONFIG.footer.contact;

      $("year").textContent = new Date().getFullYear();

      renderPlans("individual");
    }

    function bindAnchors() {
      document.querySelectorAll('a[href^="#"]').forEach(a=>{
        a.addEventListener("click",(e)=>{
          const id = a.getAttribute("href");
          if (!id || id.length < 2) return;
          const el = document.querySelector(id);
          if (!el) return;
          e.preventDefault();
          el.scrollIntoView({behavior:"smooth", block:"start"});
          history.replaceState(null, "", id);
        }, { passive: false });
      });
    }

    function setBtnLoading(btnId, spinId, textId, loading) {
      const btn = $(btnId);
      const sp = $(spinId);
      const tx = $(textId);
      if (loading) {
        sp.style.display = "inline-block";
        btn.disabled = true;
        btn.style.opacity = ".92";
        tx.textContent = "Submitting…";
      } else {
        sp.style.display = "none";
        btn.disabled = false;
        btn.style.opacity = "1";
        tx.textContent = CONFIG.hero.buttonText;
      }
    }

    async function submitWaitlist(emailValue) {
      const endpoint = (CONFIG.waitlist.endpoint || "").trim();
      if (!endpoint) return { ok: true };
      const res = await fetch(endpoint, {
        method: CONFIG.waitlist.method || "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email: emailValue })
      });
      return { ok: res.ok };
    }

    function bindWaitlist(formId, emailId, fineId, btnId, spinId, textId) {
      const form = $(formId);
      const email = $(emailId);
      const fine = $(fineId);

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const val = (email.value || "").trim();
        if (!val || !val.includes("@")) {
          fine.textContent = "Please enter a valid email.";
          fine.style.color = "rgba(255,120,120,.92)";
          return;
        }

        setBtnLoading(btnId, spinId, textId, true);
        try {
          const out = await submitWaitlist(val);
          if (!out.ok) throw new Error("bad");
        } catch {
          setBtnLoading(btnId, spinId, textId, false);
          fine.textContent = CONFIG.waitlist.errorMessage;
          fine.style.color = "rgba(255,120,120,.92)";
          return;
        }

        setBtnLoading(btnId, spinId, textId, false);
        fine.textContent = CONFIG.waitlist.successMessage;
        fine.style.color = "rgba(167,139,250,.92)";
        email.value = "";
      });
    }

    /* ===========================
       HERO VIDEO (FIXED)
       =========================== */
    function initHeroVideo() {
      const heroMedia = $("heroMedia");
      const tools = $("heroTools");
      const v = $("heroVideo");
      const srcEl = $("heroVideoSource");
      const btn = $("heroAudioBtn");
      const vol = $("heroVol");

      const isProbablyImage = (u) => /\.(png|jpe?g|webp|gif|avif)(\?|#|$)/i.test(u || "");
      const guessType = (u) => {
        const url = (u || "").toLowerCase();
        if (url.includes(".webm")) return "video/webm";
        if (url.includes(".ogv") || url.includes(".ogg")) return "video/ogg";
        return "video/mp4";
      };

      // Keep reduced-motion class (stops other animations), but DO NOT disable hero video.
      if (isReducedMotion()) document.body.classList.add("reduce-motion");

      // Pick portrait vs landscape asset
      function pickHeroVariant() {
        const portraitMQ = window.matchMedia && window.matchMedia("(orientation: portrait)").matches;
        const isPortrait = portraitMQ || window.innerWidth < 740;

        const videoUrl =
          (isPortrait ? (CONFIG.media.heroVideoPortraitUrl || "") : (CONFIG.media.heroVideoLandscapeUrl || "")) ||
          (CONFIG.media.heroVideoUrl || "");

        const posterUrl =
          (isPortrait ? (CONFIG.media.heroPosterPortraitUrl || "") : (CONFIG.media.heroPosterLandscapeUrl || "")) ||
          (CONFIG.media.heroPosterUrl || "");

        const fallbackUrl =
          (isPortrait ? (CONFIG.media.heroFallbackImagePortraitUrl || "") : (CONFIG.media.heroFallbackImageLandscapeUrl || "")) ||
          (CONFIG.media.heroFallbackImageUrl || "");

        return { isPortrait, videoUrl: (videoUrl || "").trim(), posterUrl: (posterUrl || "").trim(), fallbackUrl: (fallbackUrl || "").trim() };
      }

      function applyFallbackBG(fallbackUrl) {
        // Always keep gradients; only add url() if it looks like an image
        if (isProbablyImage(fallbackUrl)) {
          heroMedia.style.background =
            `radial-gradient(1200px 720px at 50% 34%, rgba(124,58,237,.20), transparent 62%),
             linear-gradient(180deg, rgba(0,0,0,.50), rgba(0,0,0,.78)),
             url("${fallbackUrl}") center/cover no-repeat`;
        } else {
          heroMedia.style.background =
            `radial-gradient(1200px 720px at 50% 34%, rgba(124,58,237,.20), transparent 62%),
             linear-gradient(180deg, rgba(0,0,0,.50), rgba(0,0,0,.78))`;
        }
      }

      function syncAudioUI() {
        $("heroAudioIcon").innerHTML = v.muted ? ICONS.volOff : ICONS.volOn;
        btn.setAttribute("aria-label", v.muted ? "Unmute background video" : "Mute background video");
        tools.classList.toggle("unmuted", !v.muted);
      }

      // ✅ Autoplay reliability: ALWAYS start muted first (so autoplay is allowed),
      // then user can unmute via click.
      function forceMutedAutoplayStart() {
        v.muted = true;
        v.setAttribute("muted", "");
        syncAudioUI();

        const p = v.play();
        if (p && typeof p.catch === "function") p.catch(() => {});
      }

      // Volume persistence
      const storedVol = Number(localStorage.getItem("mw_video_vol") || "80");
      const safeVol = Number.isFinite(storedVol) ? Math.max(0, Math.min(100, storedVol)) : 80;
      vol.value = String(safeVol);
      v.volume = safeVol / 100;

      vol.addEventListener("input", () => {
        const val = Number(vol.value || "80");
        const clamped = Math.max(0, Math.min(100, val));
        v.volume = clamped / 100;
        localStorage.setItem("mw_video_vol", String(clamped));
      });

      // Apply current variant (and re-apply on orientation/resize)
      let currentKey = "";
      function applyVariant() {
        const { isPortrait, videoUrl, posterUrl, fallbackUrl } = pickHeroVariant();
        const key = `${isPortrait ? "P" : "L"}|${videoUrl}`;
        if (key === currentKey) return;
        currentKey = key;

        applyFallbackBG(fallbackUrl);

        if (!videoUrl) {
          v.style.display = "none";
          btn.style.display = "none";
          vol.style.display = "none";
          return;
        }

        v.style.display = "block";
        btn.style.display = "inline-flex";

        // Poster should be an IMAGE; ignore if not image-like
        if (isProbablyImage(posterUrl)) v.poster = posterUrl;

        // Ensure required autoplay attributes are present
        v.setAttribute("autoplay", "");
        v.setAttribute("loop", "");
        v.setAttribute("playsinline", "");
        v.setAttribute("preload", "metadata");

        // Set <source> for better type signaling
        srcEl.type = guessType(videoUrl);
        srcEl.src = videoUrl;
        v.load();

        // Start muted autoplay immediately + retry when ready
        forceMutedAutoplayStart();
        v.addEventListener("loadeddata", forceMutedAutoplayStart, { once: true });
        v.addEventListener("canplay", forceMutedAutoplayStart, { once: true });
      }

      // Initial UI state: show icon even before play resolves
      syncAudioUI();

      // Apply now
      applyVariant();

      // Re-apply on rotate / resize (debounced)
      let t = 0;
      const onResize = () => {
        clearTimeout(t);
        t = setTimeout(applyVariant, 180);
      };
      window.addEventListener("resize", onResize, { passive: true });
      window.addEventListener("orientationchange", onResize);

      // Audio button: user gesture -> unmute + play
      btn.addEventListener("click", () => {
        const nextMuted = !v.muted;
        v.muted = nextMuted;
        if (nextMuted) v.setAttribute("muted", "");
        else v.removeAttribute("muted");

        localStorage.setItem("mw_video_muted", nextMuted ? "1" : "0");
        syncAudioUI();

        // If unmuting, must call play() inside user gesture handler
        const p = v.play();
        if (p && typeof p.catch === "function") p.catch(() => {});
      });

      // If user previously saved "unmuted", we still start muted for autoplay.
      // But we keep the preference so the next click restores their intent.
      // (Autoplay-with-sound is typically blocked by browsers.) 
    }

    function initDemoGallery(items) {
      const list = $("thumbList");
      const player = $("playerVideo");
      const title = $("playerMainTitle");
      const sub = $("playerMainSub");

      if (!items.length) {
        list.innerHTML = "";
        title.textContent = "No demos configured";
        sub.textContent = "Add items in CONFIG.media.demoVideos";
        player.removeAttribute("src");
        return;
      }

      function setActive(i) {
        const item = items[i];
        title.textContent = item.title || "Demo";
        sub.textContent = item.subtitle || "";

        // Autoplay muted (no play click)
        player.muted = true;
        player.loop = true;
        player.playsInline = true;
        player.setAttribute("playsinline", "");
        player.setAttribute("preload", "metadata");

        if (item.poster) player.poster = item.poster;
        player.src = item.video || "";
        player.load();

        // Try to start playback immediately (muted => generally allowed)
        player.play().catch(() => {});

        list.querySelectorAll(".thumb").forEach((el, idx) => {
          el.classList.toggle("active", idx === i);
        });
      }

      list.innerHTML = items.map((x, i) => `
        <div class="thumb" data-i="${i}" role="button" tabindex="0" aria-label="Select demo ${i+1}">
          <img src="${x.thumb}" alt="" loading="lazy"/>
          <div class="thumbTxt">
            <strong>${x.title || "Demo"}</strong>
            <span>${x.subtitle || ""}</span>
          </div>
        </div>
      `).join("");

      list.addEventListener("click", (e) => {
        const t = e.target.closest(".thumb");
        if (!t) return;
        setActive(Number(t.dataset.i));
      });

      list.addEventListener("keydown", (e) => {
        if (e.key !== "Enter" && e.key !== " ") return;
        const t = e.target.closest(".thumb");
        if (!t) return;
        e.preventDefault();
        setActive(Number(t.dataset.i));
      });

      setActive(0);
    }

    function initScrollCue() {
      const cue = $("scrollCue");
      if (!cue) return;

      const stopAt = 100;
      let ticking = false;

      function update() {
        ticking = false;
        const y = window.scrollY || document.documentElement.scrollTop || 0;

        // fade/hide after scroll
        cue.classList.toggle("cueHidden", y > stopAt);

        // stop animations after slight scroll so it doesn’t distract
        cue.classList.toggle("stopAnim", y > stopAt);
      }

      window.addEventListener("scroll", () => {
        if (ticking) return;
        ticking = true;
        requestAnimationFrame(update);
      }, { passive: true });

      update();
    }

    function initTestimonials() {
      const items = (CONFIG.testimonials && CONFIG.testimonials.items) || [];
      const viewport = $("tViewport");
      const track = $("tTrack");
      const pauseBtn = $("tPauseBtn");

      if (!items.length) {
        track.innerHTML = "";
        pauseBtn.style.display = "none";
        return;
      }

      track.innerHTML = items.map((t) => `
        <article class="tCard">
          <div class="tPills">
            <span class="tPill">${t.tag}</span>
            <span class="tPill verified">Verified</span>
          </div>
          <p class="tQuote">“${t.quote}”</p>
          <div class="tAuthor">
            <span class="tAvatar" aria-hidden="true"><img src="${t.avatar}" alt="" loading="lazy"></span>
            <span>${t.author}</span>
          </div>
        </article>
      `).join("");

      let idx = 0;
      let timer = null;
      let paused = false;

      function setPauseUI() {
        $("tPauseIcon").innerHTML = paused ? ICONS.play : ICONS.pause;
        pauseBtn.setAttribute("aria-label", paused ? "Play testimonials" : "Pause testimonials");
      }
      setPauseUI();

      function cards() {
        return Array.from(track.querySelectorAll(".tCard"));
      }

      function go(i, smooth = true) {
        const cs = cards();
        if (!cs.length) return;
        idx = (i + cs.length) % cs.length;
        const target = cs[idx];
        viewport.scrollTo({ left: target.offsetLeft - 16, behavior: smooth ? "smooth" : "auto" });
      }

      function start() {
        if (timer) clearInterval(timer);
        if (paused) return;
        if (isReducedMotion()) return; // respect reduced motion
        const ms = CONFIG.testimonials.intervalMs || 4800;
        timer = setInterval(() => go(idx + 1), ms);
      }

      function stop() {
        if (timer) clearInterval(timer);
        timer = null;
      }

      // Pause on interaction (hover/focus/touch), resume when safe
      viewport.addEventListener("pointerdown", () => { stop(); }, { passive: true });
      viewport.addEventListener("mouseenter", () => { stop(); }, { passive: true });
      viewport.addEventListener("focusin", () => { stop(); });
      viewport.addEventListener("mouseleave", () => { if (!paused) start(); }, { passive: true });
      viewport.addEventListener("focusout", () => { if (!paused) start(); });

      document.addEventListener("visibilitychange", () => {
        if (document.hidden) stop();
        else if (!paused) start();
      });

      pauseBtn.addEventListener("click", () => {
        paused = !paused;
        setPauseUI();
        if (paused) stop();
        else start();
      });

      // Update idx when user scrolls manually
      let raf = 0;
      viewport.addEventListener("scroll", () => {
        if (raf) cancelAnimationFrame(raf);
        raf = requestAnimationFrame(() => {
          const cs = cards();
          const x = viewport.scrollLeft;
          let best = 0;
          let bestDist = Infinity;
          cs.forEach((c, i) => {
            const d = Math.abs((c.offsetLeft - 16) - x);
            if (d < bestDist) { bestDist = d; best = i; }
          });
          idx = best;
        });
      }, { passive: true });

      // Start position + autoplay
      go(0, false);
      start();

      // If reduced motion: hide pause (no autoplay anyway)
      if (isReducedMotion()) {
        pauseBtn.style.display = "none";
      }
    }

    function renderPlans(mode) {
      const wrap = $("plans");
      const plans = (CONFIG.sections.pricingPlans && CONFIG.sections.pricingPlans[mode]) || [];
      wrap.innerHTML = plans.map(p => `
        <article class="card">
          <div class="planTop">
            <div class="planName">${p.name}</div>
            <div class="planPrice">${p.price}</div>
          </div>
          <ul class="bullets">
            ${(p.bullets || []).map(b => `<li><span class="tick" aria-hidden="true"></span><span>${b}</span></li>`).join("")}
          </ul>
        </article>
      `).join("");
    }

    function bindPricingToggle() {
      const a = $("tIndividual");
      const b = $("tTeam");
      a.addEventListener("click", () => {
        a.classList.add("active"); b.classList.remove("active");
        renderPlans("individual");
      });
      b.addEventListener("click", () => {
        b.classList.add("active"); a.classList.remove("active");
        renderPlans("team");
      });
    }

    applyConfig();
    bindAnchors();
    initScrollCue();
    bindWaitlist("waitlistForm", "email", "finePrint", "ctaBtn", "spin", "ctaBtnText");
    bindWaitlist("waitlistForm2", "email2", "finePrint2", "ctaBtn2", "spin2", "ctaBtnText2");
    bindPricingToggle();
  </script>
</body>
</html>
